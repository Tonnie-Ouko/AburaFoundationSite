using Microsoft.AspNetCore.Mvc;
using Microsoft.AspNetCore.Mvc.RazorPages;
using Rotativa.AspNetCore;
using AburaFoundationSite.Data;
using System.Threading.Tasks;
using System.Linq;

namespace AburaFoundationSite.Pages
{
    public class GeneratePdfModel : PageModel
    {
        private readonly AppDbContext _context;

        public GeneratePdfModel(AppDbContext context)
        {
            _context = context;
        }

        public async Task<IActionResult> OnGetAsync(int id)
        {
            var donation = await _context.Donations.FindAsync(id);
            if (donation == null)
            {
                return NotFound();
            }

            return new ViewAsPdf("PdfReceipt", donation)
            {
                PageSize = Rotativa.AspNetCore.Options.Size.A4,
                FileName = $"DonationReceipt_{id}.pdf"
            };
        }
    }
}
