@page
@model DonationModel
@{
    ViewData["Title"] = "Donate";
}

<div class="container py-5">
    <h1 class="text-primary fw-bold mb-4">Be Part of the Change! Donate Now</h1>

    <form id="donationForm" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label for="Amount" class="form-label">Amount (KES or USD):</label>
            <input asp-for="Donation.Amount" class="form-control" id="Amount" />
            <span asp-validation-for="Donation.Amount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="PaymentMethod" class="form-label">Payment Method:</label>
            <select asp-for="Donation.PaymentMethod" class="form-select" id="PaymentMethod">
                <option value="">-- Select Method --</option>
                <option value="PayPal">PayPal</option>
                <option value="MPesa">M-Pesa</option>
                <option value="Card">Credit/Debit Card</option>
            </select>
            <span asp-validation-for="Donation.PaymentMethod" class="text-danger"></span>
        </div>

        <div id="phoneSection" class="mb-3" style="display:none;">
            <label for="PhoneNumber" class="form-label">M-Pesa Phone Number:</label>
            <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" />
        </div>

        <div id="paypal-button-container" class="mb-3" style="display:none;"></div>
        <div id="card-button-container" class="mb-3" style="display:none;"></div>

        <button id="donateButton" type="submit" class="btn btn-primary w-100">Donate</button>
    </form>
</div>

@section Scripts {
    <script src="https://www.paypal.com/sdk/js?client-id=AUsO3F89ZKeIlRwvq61ilbz5XAkGjIkfWPWfun8YioHXS-LG1UwEJY7MapT9tbWuuAn9H7qOX5NaV-wU&components=buttons,funding-eligibility&enable-funding=card&currency=USD"></script>

    <script>
    const methodSelect = document.getElementById("PaymentMethod");
    const phoneSection = document.getElementById("phoneSection");
    const paypalButton = document.getElementById("paypal-button-container");
    const cardButton = document.getElementById("card-button-container");

    methodSelect.addEventListener("change", function () {
        const method = this.value;
        phoneSection.style.display = method === "MPesa" ? "block" : "none";
        paypalButton.style.display = method === "PayPal" ? "block" : "none";
        cardButton.style.display = method === "Card" ? "block" : "none";
    });

       const getAmount = () => {
        const amountInput = document.getElementById("Amount");
        return amountInput && amountInput.value ? amountInput.value : "1";
    };

    window.onload = function () {
        paypal.Buttons({
            fundingSource: paypal.FUNDING.PAYPAL,
            createOrder: (data, actions) => actions.order.create({
                purchase_units: [{ amount: { value: getAmount() } }]
            }),
            onApprove: (data, actions) => actions.order.capture().then(details => {
                alert(`✅ PayPal transaction completed by ${details.payer.name.given_name}`);
                document.getElementById("donationForm").submit();
            }),
            onError: err => {
                console.error("❌ PayPal error:", err);
                alert("❌ An error occurred while processing your PayPal payment.");
            }
        }).render('#paypal-button-container');

        paypal.Buttons({
            fundingSource: paypal.FUNDING.CARD,
            createOrder: (data, actions) => actions.order.create({
                purchase_units: [{ amount: { value: getAmount() } }]
            }),
            onApprove: (data, actions) => actions.order.capture().then(details => {
                alert(`✅ Card payment completed by ${details.payer.name.given_name}`);
                document.getElementById("donationForm").submit();
            }),
            onError: err => {
                console.error("❌ Card payment error:", err);
                alert("❌ An error occurred while processing your Card payment.");
            }
        }).render('#card-button-container');
    };
</script>


}
