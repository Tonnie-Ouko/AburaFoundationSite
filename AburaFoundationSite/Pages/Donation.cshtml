@page
@model DonationModel
@{
    ViewData["Title"] = "Donate";
}

<div class="container py-5">
    <h1 class="text-primary fw-bold mb-4">Be Part of the Change! Donate Now</h1>

    <form id="donationForm">
        <div class="mb-3">
            <label for="Amount" class="form-label">Amount (KES or USD):</label>
            <input asp-for="Donation.Amount" class="form-control" id="Amount" />
            <span asp-validation-for="Donation.Amount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="PaymentMethod" class="form-label">Payment Method:</label>
            <select asp-for="Donation.PaymentMethod" class="form-select" id="PaymentMethod">
                <option value="">-- Select Method --</option>
                <option value="PayPal">PayPal</option>
                <option value="MPesa">M-Pesa</option>
            </select>
            <span asp-validation-for="Donation.PaymentMethod" class="text-danger"></span>
        </div>

        <div id="paypal-button-container" class="mb-3" style="display:none;"></div>

        <button id="donateButton" type="submit" class="btn btn-primary w-100">Donate</button>
    </form>
</div>

@section Scripts {
    <!-- PayPal Smart Buttons with Credit Card support -->
    <script src="https://www.paypal.com/sdk/js?client-id=AUsO3F89ZKeIlRwvq61ilbz5XAkGjIkfWPWfun8YioHXS-LG1UwEJY7MapT9tbWuuAn9H7qOX5NaV-wU&components=buttons,hosted-fields&enable-funding=card&currency=USD"></script>

    <script>
        function togglePayment(method) {
            document.getElementById("paypalSection").style.display = method === "PayPal" ? "block" : "none";
            document.getElementById("cardSection").style.display = method === "Card" ? "block" : "none";
            document.getElementById("mpesaSection").style.display = method === "Mpesa" ? "block" : "none";
            document.getElementById("phoneSection").style.display = method === "Mpesa" ? "block" : "none";
        }

        function showConfirmModal() {
            const amount = document.getElementById("Amount").value;
            const method = document.getElementById("PaymentMethod").value;

            if (!amount || !method) return false;

            document.getElementById("confirmAmount").textContent = amount;
            document.getElementById("confirmMethod").textContent = method;
            document.getElementById("confirmModal").style.display = "block";
            return false;
        }

        function hideConfirmModal() {
            document.getElementById("confirmModal").style.display = "none";
        }

        function proceedDonation() {
            hideConfirmModal();
            document.getElementById("spinner").style.display = "block";
            document.getElementById("donationForm").submit();
        }

        // ========== PAYPAL BUTTON ==========
        paypal.Buttons({
            fundingSource: paypal.FUNDING.PAYPAL,
            style: { layout: 'vertical', color: 'blue', shape: 'rect', label: 'paypal' },
            createOrder: function (data, actions) {
                const amount = document.getElementById("Amount").value || "1";
                return actions.order.create({
                    purchase_units: [{ amount: { value: amount } }]
                });
            },
            onApprove: function (data, actions) {
                return actions.order.capture().then(function (details) {
                    alert('✅ Transaction completed by ' + details.payer.name.given_name);
                    // Optionally auto-submit form or redirect here
                });
            },
            onError: function (err) {
                console.error('❌ PayPal error:', err);
                alert("❌ An error occurred while processing your PayPal payment.");
            }
        }).render('#paypal-button-container');

        // ========== CREDIT/DEBIT CARD BUTTON ==========
        paypal.Buttons({
            fundingSource: paypal.FUNDING.CARD,
            style: { layout: 'vertical', color: 'silver', shape: 'rect', label: 'pay' },
            createOrder: function (data, actions) {
                const amount = document.getElementById("Amount").value || "1";
                return actions.order.create({
                    purchase_units: [{ amount: { value: amount } }]
                });
            },
            onApprove: function (data, actions) {
                return actions.order.capture().then(function (details) {
                    alert('✅ Card payment successful by ' + details.payer.name.given_name);
                    // Optionally auto-submit form or redirect here
                });
            },
            onError: function (err) {
                console.error('❌ Card payment error:', err);
                alert("❌ An error occurred while processing your Card payment.");
            }
        }).render('#card-button-container');
    </script>
}
