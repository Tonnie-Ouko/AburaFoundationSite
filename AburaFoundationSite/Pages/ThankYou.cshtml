@page "{id:int}"
@model ThankYouModel
@{
    ViewData["Title"] = "Thank You for Your Donation";
    Layout = "_Layout";
    var donation = Model.Donation;
}

<div class="container py-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-success mb-3">🎉 Thank You for Your Generous Donation!</h2>
        <p class="lead">We’ve received your contribution. Below is your receipt.</p>

        <table class="table table-bordered mt-4">
            <tr><th>Donation ID:</th><td>@donation.Id</td></tr>
            <tr><th>Amount:</th><td>@donation.Amount.ToString("C")</td></tr>
            <tr><th>Payment Method:</th><td>@donation.PaymentMethod</td></tr>
            <tr><th>Status:</th><td>
                @if (donation.Status == "Success")
                {
                    <span class="badge bg-success">Success</span>
                }
                else if (donation.Status == "Pending")
                {
                    <span class="badge bg-warning text-dark">Pending</span>
                }
                else
                {
                    <span class="badge bg-danger">Failed</span>
                }
            </td></tr>
            @if (!string.IsNullOrEmpty(donation.PhoneNumber))
            {
                <tr><th>Phone Number:</th><td>@donation.PhoneNumber</td></tr>
            }
            <tr><th>Date:</th><td>@donation.Date.ToString("f")</td></tr>
        </table>

        <div class="mt-4">
            <a href="/" class="btn btn-secondary">Back to Home</a>
            <a href="/GeneratePdf?id=@Model.Donation.Id" class="btn btn-outline-success mt-3">
                📄 Download PDF Receipt
            </a>
            <a class="btn btn-outline-primary" target="_blank" href="/PdfReceipt/@donation.Id">Download Receipt (PDF)</a>
        </div>
    </div>
</div>
